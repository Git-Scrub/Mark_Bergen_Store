<p id="notice"><%= notice %></p>

<h1>Customers</h1>
<%# Session test, delete this %>
<p> You have visited this page <%= pluralize(@visit_count, 'time') %> </p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Home address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.home_address %></td>
		
		<%= link_to 'Remember to call', remember_to_call_customer_path(customer), method: :post %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
