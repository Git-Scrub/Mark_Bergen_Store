<h1>Sign up to make ordering online quick & easy!</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
    <p class="input_paragraph"> Username: <%= f.text_field :user_name %></p>
    <p class="input_paragraph"> Password: <%= f.password_field :password %></p>
  <% end %>
 <%= fields_for(:customer) do |u| %>
   <div class="field">
     <p class="input_paragraph"> First Name: <%= u.text_field :first_name %> </p>
     <p class="input_paragraph"> Last Name: <%= u.text_field :last_name %> </p>
	 <p class="input_paragraph"> Email: <%= u.text_field :email %> </p>
	 <p class="input_paragraph"> Address: <%= u.text_field :home_address %> </p>
	 <p class="input_paragraph"> City: <%= u.text_field :city %> </p>
	 <!-- <p> Province: <%= u.text_field :province %> </p> -->
   </div>
 <% end %>
 <p id="errors"> </p>
 <div class="actions">
   <button onclick="submit_new_user()"> Save User Data! </button>
 </div>
</div>